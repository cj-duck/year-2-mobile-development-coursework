<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.napier.coursework10">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/MenuTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LengthActivity"
            android:label="Length Conversion" />
        <activity
            android:name=".WeightActivity"
            android:label="Weight Conversion" />
        <activity
            android:name=".AreaActivity"
            android:label="Area Conversion" />
        <activity
            android:name=".VolumeActivity"
            android:label="Volume Conversion" />
        <activity
            android:name=".DataActivity"
            android:label="Data Conversion" />
        <activity
            android:name=".CookingActivity"
            android:label="Cooking Conversion" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />


    </application>

</manifest>